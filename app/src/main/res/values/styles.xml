<resources>

    <!-- Login -->
    <style name="TextAppearance.AppTheme.Title" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <!-- Buttons -->
    <style name="DefaultButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ButtonAppearance</item>
    </style>

    <style name="DefaultImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="background">@drawable/rounded_background_primary_color</item>
        <item name="shapeAppearance">@style/ButtonAppearance</item>
    </style>

    <style name="ButtonAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/default_radius</item>
    </style>

    <!-- Text -->
    <style name="DefaultTextStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="InputEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline4
        </item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">@dimen/margin_large</item>
        <item name="android:background">@drawable/rounded_background_primary_color</item>
    </style>

    <!-- EditText -->
    <style name="EditTextAuth" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/lightGrey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="SignIn" parent="Base.AppTheme">
        <item name="buttonStyle">@style/SignInButtonStyle</item>
    </style>

    <style name="SignInButtonStyle" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="MainBoardRecyclerviewItem" parent="Theme.MaterialComponents">
        <item name="android:elevation">@dimen/basic_elevation</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_size_small</item>
    </style>

    <style name="MainboardInputLayout">
        <item name="android:elevation">@dimen/basic_elevation</item>
        <item name="android:background">@drawable/main_board_message_input</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <!--Profile page -->

    <style name="ProfileTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:background">@drawable/rounded_background_white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">@dimen/profile_progress_bar_size</item>
        <item name="android:layout_height">@dimen/profile_progress_bar_size</item>
        <item name="android:indeterminate">false</item>
        <item name="android:max">100</item>
        <item name="android:progress">10</item>
        <item name="android:progressDrawable">@drawable/circular_progress_bar</item>
        <item name="android:background">@drawable/progress_circle_shape</item>
        <item name="android:translationZ">4dp</item>
    </style>


</resources>
